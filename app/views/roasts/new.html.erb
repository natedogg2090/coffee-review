<%= form_for @roast do |f| %>
	<%= f.label :name, "Roast" %>
	<%= f.text_field :name %></br>
	<%= f.label :origin, "Origin" %>
	<%= f.text_field :origin %></br>
	<%= f.label :tasting_notes, "Tasting Notes" %>
	<%= f.text_area :tasting_notes %></br>
	<%= f.label :preparation_method, "Suggested Preparation Method" %>
	<%= f.text_field :preparation_method %></br>
	<%= f.label :price, "Price" %>
	<%= f.text_field :price %></br>
	<%= f.label :roasted_date, "Roasted Date" %>
	<%= f.date_select :roasted_date %></br>
	<%= f.label :roaster, "Roaster" %>
	<%= f.text_field :roaster %></br>
	</br>
	<%= f.button("Create Roast") %>

<% end %>